<% if flash[:error] %>
	<%= flash[:error] %>
<% end %>

<h1>Stock Selection</h1>

 <table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <tr>
      <td><strong>Stock Name </strong></td>
      <td><strong>Stock Price </strong></td>
      <td><strong>Stock Link </strong></td>
    </tr>
    <% @stocks.each do |s| %>
      <tr>

         <td><%= s.name %></td>
        <td><%= s.price %></td>
        <% if current_account.broker_acc %>
          <td><%= link_to "Show #{s.name}", stock_path(s) %></td>
        <% else %>
          <td><%= link_to "Buy #{s.name}", stock_path(s) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

 <% if current_account %>
  <p>
    <%= link_to "Back to Account", account_path(current_account) %>
  </p>
<% if current_account.broker_acc %>
  <p>
    <%= link_to "Add New Stocks", new_stock_path %>
  </p>
<% end %>
<% end %>